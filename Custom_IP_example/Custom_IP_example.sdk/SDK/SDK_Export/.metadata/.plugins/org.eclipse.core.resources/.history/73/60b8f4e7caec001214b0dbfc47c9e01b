/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include "xil_types.h"
#include "xil_io.h"

extern char inbyte(void);

u32 data;

int main()
{
    init_platform();
    //data = *(int *)(0x78E00000);
    print("Options:\n\r0: stop counter\n\r1: start counter\n\r9: read memory\n\rany other key to exit\n\r");
    char choice = inbyte();
    Xil_Out32(0x78E00000, 0x1);
    choice = inbyte();
    Xil_Out32(0x78E00000, 0x0);
    print("Hello World\n\r");

    int exit_flag = 0;
    while(exit_flag != 1)
    {
    	choice = inbyte();
    	switch(choice)
    	{
    		case '0':
    			Xil_Out32(0x78E00000, 0x0);
    			break;
    		case '1':
    			Xil_Out32(0x78E00000, 0x1);
    			break;
    		case '9':
    			data = Xil_In32(0x78E00000);
    			printf("Data read: %d\n",data);
    			break;
    		default:
    			exit_flag = 1;
    			break;
    	}

    }
    return 0;
}
